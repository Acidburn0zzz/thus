<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!-- interface-requires gtk+ 3.0 -->
  <object class="GtkImage" id="advanced_image">
    <property name="visible">True</property>
    <property name="can_focus">False</property>
    <property name="xpad">1</property>
    <property name="ypad">5</property>
    <property name="stock">gtk-missing-image</property>
  </object>
  <object class="GtkImage" id="automatic_image">
    <property name="visible">True</property>
    <property name="can_focus">False</property>
    <property name="xpad">1</property>
    <property name="ypad">5</property>
    <property name="stock">gtk-missing-image</property>
  </object>
  <object class="GtkImage" id="easy_image">
    <property name="visible">True</property>
    <property name="can_focus">False</property>
    <property name="xpad">1</property>
    <property name="ypad">5</property>
    <property name="stock">gtk-missing-image</property>
  </object>
  <object class="GtkBox" id="installation_ask">
    <property name="visible">True</property>
    <property name="can_focus">False</property>
    <property name="margin_left">30</property>
    <property name="margin_top">20</property>
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkRadioButton" id="automatic_radiobutton">
        <property name="label" translatable="yes">Erase disk and install Cinnarch (automatic)</property>
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="receives_default">False</property>
        <property name="image">automatic_image</property>
        <property name="xalign">0</property>
        <property name="always_show_image">True</property>
        <property name="active">True</property>
        <property name="draw_indicator">True</property>
        <signal name="toggled" handler="on_automatic_radiobutton_toggled" swapped="no"/>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">True</property>
        <property name="position">0</property>
      </packing>
    </child>
    <child>
      <object class="GtkLabel" id="automatic_description">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="margin_left">75</property>
        <property name="xalign">0</property>
        <property name="yalign">0</property>
        <property name="label" translatable="yes">&lt;span weight="light" size="small"&gt;Warning: This will delete all programs, documents, photos, music and any other files on your disk&lt;/span&gt;</property>
        <property name="use_markup">True</property>
        <property name="wrap">True</property>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">False</property>
        <property name="position">1</property>
      </packing>
    </child>
    <child>
      <object class="GtkRadioButton" id="easy_radiobutton">
        <property name="label" translatable="yes">Choose where to install Cinnarch (easy)</property>
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="receives_default">False</property>
        <property name="margin_top">20</property>
        <property name="image">easy_image</property>
        <property name="xalign">0</property>
        <property name="always_show_image">True</property>
        <property name="active">True</property>
        <property name="draw_indicator">True</property>
        <property name="group">automatic_radiobutton</property>
        <signal name="toggled" handler="on_easy_radiobutton_toggled" swapped="no"/>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">True</property>
        <property name="position">2</property>
      </packing>
    </child>
    <child>
      <object class="GtkLabel" id="easy_description">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="margin_left">75</property>
        <property name="xalign">0</property>
        <property name="yalign">0</property>
        <property name="label" translatable="yes">&lt;span weight="light" size="small"&gt;You will have to choose where to install Manjaro. You will be only asked for the mount points of your root and swap devices.&lt;/span&gt;</property>
        <property name="use_markup">True</property>
        <property name="wrap">True</property>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">False</property>
        <property name="position">3</property>
      </packing>
    </child>
    <child>
      <object class="GtkRadioButton" id="advanced_radiobutton">
        <property name="label" translatable="yes">Manage your partitions and choose where to install Manjaro (advanced)</property>
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="receives_default">False</property>
        <property name="margin_top">20</property>
        <property name="image">advanced_image</property>
        <property name="xalign">0</property>
        <property name="always_show_image">True</property>
        <property name="active">True</property>
        <property name="draw_indicator">True</property>
        <property name="group">automatic_radiobutton</property>
        <signal name="toggled" handler="on_advanced_radiobutton_toggled" swapped="no"/>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">True</property>
        <property name="position">4</property>
      </packing>
    </child>
    <child>
      <object class="GtkLabel" id="advanced_description">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="margin_left">75</property>
        <property name="xalign">0</property>
        <property name="yalign">0</property>
        <property name="label" translatable="yes">&lt;span weight="light" size="small"&gt;You will be able to create/delete partitions, choose where to install Manjaro and also choose additional mount points.&lt;/span&gt;</property>
        <property name="use_markup">True</property>
        <property name="wrap">True</property>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">False</property>
        <property name="position">5</property>
      </packing>
    </child>
  </object>
</interface>
